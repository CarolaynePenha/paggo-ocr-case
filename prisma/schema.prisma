generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  name      String
  email     String    @unique
  session   Session[]

  @@map("users")
}

model Session {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  token     String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  @@map("sessions")
}

model Company {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  name        String
  cpfCnpj     String
  address     String
  phoneNumber Int
  city        String
  state       String
  email       String

  @@map("companies")
}

model Invoice {
  id                     Int      @id @default(autoincrement())
  createdAt              DateTime @default(now())
  textRaw                String
  imageLink              String
  imageName              String
  number                 String
  totalAmount            Float
  netAmount              Float
  issuanceDate           String
  description            String
  bankingInfoDescription String

  @@map("invoices")
}
